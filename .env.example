# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret

# Database
# For Railway: Use ${{Postgres.DATABASE_URL}}
# For local: postgresql://user:password@localhost:5432/pulse_db
DATABASE_URL=postgresql://pulse_user:pulse_password@postgres:5432/pulse_db

# Redis
# For Railway: Use ${{Redis.REDIS_URL}}
# For local: redis://localhost:6379/0
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# OpenAI
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini
OPENAI_PREMIUM_MODEL=gpt-4o

# YooKassa
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key
YOOKASSA_RETURN_URL=https://your-domain.com/payment/return

# Admin
ADMIN_SECRET_KEY=your_admin_secret_key

# App Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
PORT=8000
